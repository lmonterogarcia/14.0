<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="res_config_settings_account_view_form_inherit" model="ir.ui.view">
    <field name="name">res_config_settings_account_view_form_inherit</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="25" />
    <field name="inherit_id" ref="account.res_config_settings_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//div[@id='analytic']" position="after">
        <h2>Código Contable</h2>
        <div class="row mt16 o_settings_container" id="account_code">
          <div class="col-12 col-lg-6 o_setting_box">
            <div class="o_setting_left_pane">
              <field name="change_code"/>
            </div>
            <div class="o_setting_right_pane">
              <label for="change_code"/>
              <div class="text-muted">
                Activa la posibilidad de personalizar como se guardan la numeración de las cuentas contables
              </div>
            </div>
          </div>
          <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('change_code', '=', False )]}">
            <div class="o_setting_left_pane">
            </div>
            <div class="o_setting_right_pane">
              <span class="o_form_label">Configuración personalizada</span>
              <div>
                <label for="fill_with"/>
                <field name="fill_with"/>
                <div class="text-muted">
                  Caracter o dígito con el que se rellenran los registros de cuentas contables
                </div>
                <label for="max_field_len"/>
                <field name="max_field_len"/>
                <div class="text-muted">
                  Longitud que tendrán los códigos de las cuentas contables
                </div>
                <label for="special_character"/>
                <field name="special_character"/>
                <div class="text-muted">
                  Caracter que se utiliza para especificar donde rellenar los registros de cuentas contables
                </div>
                <label for="special_account"/>
                <field name="special_account"/>
                <div class="text-muted">
                  Cuenta especial
                </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>

<!-- ir.default -->